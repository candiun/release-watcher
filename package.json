{
  "name": "release-watcher",
  "productName": "Release Watcher",
  "version": "0.1.0",
  "description": "Electron GUI for tracking app release updates from JSON and HTML sources",
  "main": "dist/main/index.js",
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "build:assets": "node scripts/copy-assets.mjs",
    "build": "npm run clean && npm run build:main && npm run build:renderer && npm run build:assets",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "watch:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "watch:renderer": "tsc -p tsconfig.renderer.json --watch --preserveWatchOutput",
    "watch:assets": "chokidar \"src/renderer/*.html\" \"src/renderer/*.css\" -c \"node scripts/copy-assets.mjs\" --initial",
    "watch:electron": "nodemon --watch dist/main --watch dist/preload --watch dist/renderer --ext js,html,css --signal SIGTERM --exec \"electron .\"",
    "dev:watch": "npm run build && concurrently -k -n MAIN,RENDER,ASSETS,ELECTRON -c cyan,magenta,yellow,green \"npm:watch:main\" \"npm:watch:renderer\" \"npm:watch:assets\" \"npm:watch:electron\"",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "pack:mac": "npm run build && electron-builder --mac --dir",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "release-monitor",
    "notifications"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.10",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "electron": "^37.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.15.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.24.1",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.releasewatcher.app",
    "productName": "Release Watcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
